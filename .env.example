# Flask
FLASK_SECRET_KEY=change-this-please
HOST=0.0.0.0
PORT=8080
DEBUG=false

# FE origin để CORS (Next.js)
FRONTEND_BASE_URL=http://192.168.1.100:3000

# OAuth redirect URI (phải khớp Google Cloud)
OAUTH_REDIRECT_URI=http://192.168.1.100:8080/api/auth/callback

# Đường dẫn client_secret.json
GOOGLE_CLIENT_SECRETS_FILE=credentials/client_secret.json

# rclone
RCLONE_BIN=rclone
RCLONE_CONFIG_PATH=./rclone/rclone.conf
RCLONE_REMOTE_NAME=gdrive
RCLONE_DEST_PATH=AutoUploads          # để trống = My Drive gốc
RCLONE_TRANSFERS=4
RCLONE_CHECKERS=8
RCLONE_DRIVE_CHUNK_SIZE=64M
RCLONE_DELETE_LOCAL=0                 # 1 = xóa file local sau khi upload

# Upload từ FE -> BE (MB)
MAX_UPLOAD_MB=20480
